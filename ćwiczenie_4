#include <iostream>
#include <conio.h>
#include <windows.h>
#include <cstdlib>
void gotoxy(int x, int y );
using namespace std;
int main()
{
 cout << "Dzialanie funkcji gotoxy - punkt poczÄ…tkowy (0,0)";
  gotoxy(15,5);
   cout << " Nowy punkt (15,5) - Teraz kursor konsoli jest tutaj";
   getch();
}

void gotoxy( int x, int y ) 
{
 COORD coord;
 coord.X = x; 
 coord.Y = y; 
 
 SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord );
 }
